{% extends 'base.html.twig' %}


{% block body %}
    {% include '/modal/vins/add-vin-modal.html.twig' %}
    {% include '/modal/couleurs/add-couleur-modal.html.twig' %}
    <h1 class="page-title">Mes vins</h1>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
        <button type="button" class="btn-add vin btn btn-primary btn-lg text-decoration-none"
                data-toggle="modal"
                data-target="#addVinModal">
            Ajouter
        </button>
{#        <button type="button" class="btn-add couleur btn btn-primary btn-lg text-decoration-none"#}
{#                data-toggle="modal"#}
{#                data-target="#addCouleurModal">#}
{#            Ajouter une couleur#}
{#        </button>#}
    {% endif %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Milésime</th>
                <th>Région</th>
                <th>Couleurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vin in vins %}
            <tr>
                <td>{{ vin.Name }}</td>
                <td>{{ vin.Milesime }}</td>
                <td>{{ vin.Region }}</td>
                <td>{{ vin.couleurs.name }}</td>
                <td class="td-action">
                    <a class="btn btn-primary btn-sm" href="{{ path('vins_show', {'id': vin.id}) }}" role="button">Détail</a>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    {{ include('vins/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
