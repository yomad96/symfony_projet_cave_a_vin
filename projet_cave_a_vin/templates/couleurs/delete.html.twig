<form method="post" action="{{ path('couleurs_delete', {'id': couleur.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.id) }}">
    <button class="btn btn-primary btn-sm">Supprimer</button>
</form>
