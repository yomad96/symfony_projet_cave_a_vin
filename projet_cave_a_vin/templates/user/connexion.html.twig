{% extends 'base.html.twig' %}
{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('user_connexion') }}" method="post">
        <div class="form-group">
            <label for="_username">Nom d'utilisateur</label>
            <input type="text" class="form-control" required name="_username">
            <label for="_userpassword">Mot de passe</label>
            <input type="password" class="form-control" required name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}
